<div class="banner">
  <div class="container text-white text-center">
    <h1 class="mb-4">Welcome to <strong>Little Bee's</strong> sells register!</h1>
  </div>

  <div class="overlay"></div> <!-- Keep the overlay for the effect -->

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center mb-4">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-4" }) do |f| %>
          <div class="form-inputs">
            <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, class: "form-control mb-3", placeholder: "Name" %>
            </div>

            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control mb-3", placeholder: "Email" } %>

            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "form-control mb-3", placeholder: "Password" } %>

            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "form-control mb-3", placeholder: "Confirm Password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-success" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
