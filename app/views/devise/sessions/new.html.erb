<div class="banner">
  <div class="container text-white text-center">
    <h1 class="mb-4">Welcome to <strong>Little Bee's</strong> sells register!</h1>
  </div>

  <div class="overlay"></div> <!-- Keep the overlay for the effect -->

  <div class="container mt-5">
    <h2 class="text-center mb-4 log-text">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-4" }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control mb-3", placeholder: "Email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control mb-3", placeholder: "Password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
